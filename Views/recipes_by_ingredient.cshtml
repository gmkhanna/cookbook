<h2>These Recipes match your ingredient search :</h2>

@if (Model.Count == 0)
{
  <h4> This ingredient could not be found in your saved recipes</h4>
}
else
{
  <ul>
  @foreach(var recipe in Model)
  {
    <h3>Name: @recipe.GetName()</h2>
    <p>Ingredients: @recipe.GetIngredients()</p>
    <p>Instructions: @recipe.GetInstructions()</p>
    <h3>Rating: @recipe.GetRating()</h2>
  }
  </ul>

}
<a href="/" class="hollow button">Home</a>
