@{
    Layout = "Shared/_Layout.cshtml";
}
<h2>Recipes:</h2>
@if (Model.Count != 0)
{
  <ul>
    @foreach (var recipe in Model)
    {
      <li><a href='/recipes/@recipe.GetId()'>@recipe.GetName()</a> | <a href="/recipe/@recipe.GetId()/edit">Edit / Delete</a></li>
    }
  </ul>
}

<h4><a href="/recipes/new">Add new recipe</a></h4>
<a href="/" class="hollow button">Home</a>
