@{
    Layout = "Shared/_Layout.cshtml";
}

<h2>Categories:</h2>
@if (Model.Count != 0)
{
  <ul>
    @foreach (var category in Model)
    {
      <li><a href="/category/@category.GetId()">@category.GetStyle()</a> | <a href="/category/@category.GetId()/edit">Edit / Delete</a></li>
    }
  </ul>
}
<h4><a href="/categories/new">Add a new category</a></h4>
<a href="/" class="hollow button">Home</a>
